<%-include('partials/Header')%>
<link rel="stylesheet" href="/styles/dataTable.css">
<main class="d-flex flex-nowrap" style="align-self: center;">

    <%-include('partials/Aside')%> 
<div class="d-flex flex-column flex-fill" style="border-left: 1px solid #dddddd; padding: 1.5em 2em 1.5em 2em;  gap:1.5em; overflow: auto;">
      <%-include('partials/navBar.ejs', {data:{
          leave: {
              url: '/admin/manageleave/all',
              name: 'Leave'
          }
        },
      })%>    

      <section id="minimal-statistics">
        <div class="row">
          <div class="col-12">
            <h4 class="text-uppercase">Manage Leave</h4>
            <p>Leave Tools, Summary, and Redirects</p>
          </div>
        </div>
        <div class="d-flex flex-column">
          <div class="row card-con">
            <div class="col-xl-3 col-lg-6 col-md-6" style="gap: 1.5em;">
              <div class="card card-stats mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <h5 class="card-title text-uppercase text-muted mb-0">Total Leave Requests</h5>
                      <span class="h2 font-weight-bold mb-0"><%=(data.summ  aryData) ? data.summaryData.total_leaverequest : 0%></span>
                    </div>
                    <div class="col-auto">

                    </div>
                  </div>
                  <p class="mt-3 mb-0 text-muted text-sm">
                    <a href="/admin/manageleave/all"><span class="text-nowrap">View Details</span></a>
                  </p>
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-lg-6 col-md-6" style="gap: 1.5em;">
              <div class="card card-stats mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <h5 class="card-title text-uppercase text-muted mb-0">Total Pending </h5>
                      <span class="h2 font-weight-bold mb-0"><%=(data.summaryData) ? data.summaryData.total_pending_requests : 0%></span>
                    </div>
                    <div class="col-auto">

                    </div>
                  </div>
                  <p class="mt-3 mb-0 text-muted text-sm">
                    <a href="/admin/manageleave/all"><span class="text-nowrap">View Details</span></a>
                  </p>
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-lg-6 col-md-6" style="gap: 1.5em;">
              <div class="card card-stats mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <h5 class="card-title text-uppercase text-muted mb-0">Total Approved</h5>
                      <span class="h2 font-weight-bold mb-0"><%=(data.summaryData) ? data.summaryData.total_approved_requests : 0%></span>
                    </div>
                    <div class="col-auto">

                    </div>
                  </div>
                  <p class="mt-3 mb-0 text-muted text-sm">
                    <a href="/admin/manageleave/all"><span class="text-nowrap">View Details</span></a>
                  </p>
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-lg-6 col-md-6" style="gap: 1.5em;">
              <div class="card card-stats mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <h5 class="card-title text-uppercase text-muted mb-0">Total Declined</h5>
                      <span class="h2 font-weight-bold mb-0"><%=(data.summaryData) ? data.summaryData.total_declined_requests : 0%></span>
                    </div>
                    <div class="col-auto">

                    </div>
                  </div>
                  <p class="mt-3 mb-0 text-muted text-sm">
                    <a href="/admin/manageleave/all"><span class="text-nowrap">View Details</span></a>
                  </p>
                </div>
              </div>
            </div>
          
          </div>
        </div>
    </section>
    <div class="d-flex filterContainer rounded-1 gap-3">
        <form action="">
            <div class="input-group">
                <div class="input-group-prepend">
                  <div class="input-group-text  rounded-1 d-flex gap-2">
                  <input type="radio" name="datefil" value="alltime" aria-label="Radio button for following text input" checked> <label>label</label>
                  <input type="radio" name="datefil" value="today" aria-label="Radio button for following text input"> Today
                  <input type="radio" name="datefil" value="15d"data-odaria-label="Radio button for following text input"> 15D
                  <input type="radio" name="datefil" value="30d"data-odaria-label="Radio button for following text input"> 30D
                  </div>
                </div>
              </div>
            <input type="date" name="from" value="" id="" class="rounded-1">
            <input type="date" name="to" value="" id="" class="rounded-1"    >
            
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <div class="d-flex  table-container table-responsive"> 
    
        <table id="mainTable" class="table border-top border-bottom" style="width: 100%;">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Full Name</th>
                    <th>Leave type</th>
                    <th>Applied On</th>
                    <th>Current Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
              <% Object.values(data.result).forEach(leaveRequest =>{%> 
                <tr>
                    <td><%=leaveRequest.emp_id%></td>
                    <td><%=leaveRequest.name%></td>
                    <td><%=leaveRequest.leave_type%></td>
                    <td><%=moment(leaveRequest.date_requested).format('LL')%></td>
                    <td>
                      <%if(leaveRequest.status.toLowerCase() === 'pending'){ %>
                          <span class="status pending">pending</span>
                      <%}else if (leaveRequest.status.toLowerCase() === 'approved'){%>
                          <span class="status approved">approved</span>
                      <%}else if(leaveRequest.status.toLowerCase() === 'declined'){%>
                        <span class="status declined">declined</span>
                      <%}%>
                    </td>
                    <td>
                      <%if(leaveRequest.status.toLowerCase() === 'pending'){%>
                        <a onclick="updateRequest('<%=leaveRequest._id%>', 'approve')" href="#" class="table-link approve">Approve</a>
                        <a onclick="updateRequest('<%=leaveRequest._id%>', 'decline')"href="#" class="table-link reject">Decline</a>
                      <%}else{%>
                        
                      <%}%>
                    </td>
                </tr>
                <%}); %>
               <style>
                   
               </style>
                <script src="/scripts/allLeave.js" type="text/javascript"></script>  
          
          </tbody>
            <tfoot>
            </tfoot>
        </table>
    </div>
</div>



</main>

<%-include('partials/Footer')%>
<script type="text/javascript" src="/script/scripts.js"></script>