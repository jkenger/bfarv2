<style>
    .form-control{
        width: 100%;
        border-radius: 0;
    }
    select{
        padding: .375em .6em;
        margin: 0;
        border-right: 0;
        border-left: 0;
        border-top: 1px solid #DDDDDD;
        border-bottom: 1px solid #DDDDDD;
    }
    input, select, textarea{
        outline-color: #656488;
    }
    select:selection{
        border: 1px solid #656488;
    }
    label{
        padding-left: .75em;
        padding-bottom: .25em;
    }
</style>
<!-- needs to be changed -->
<input required type="text" step="any" class="form-control inputModal" name='doc_id' placeholder="From" value="<%=employee._id%>" hidden>
<input required type="text" step="any" class="form-control inputModal" name='emp_id' placeholder="From" value="<%=employee.employee_details.designation.id%>" hidden>
<input required type="text" step="any" class="form-control inputModal" name='name' placeholder="From" value="<%=employee.personal_information.name%>" hidden>
<div class="mb-0">
    <label for="id">Leave Type:</label>
    <select class="custom-select" name="leave_type" id="empTypeSelect">
        <% Object.values(data.result).forEach(leave =>{%> 
            <option value="<%=leave.leave_type%>"><%=leave.leave_type%></option>
        <%});%>
    </select>
    <p class="text-center text-danger leave-error error"></p>
</div>

<div class="mb-0">
    <label for="id">Leave From:</label>
    <input required type="date" step="any" class="form-control inputModal" name='start_date' placeholder="From" value="">
    <p class="text-center text-danger fname-error error"></p>

</div>
<div class="mb-0">
    <label for="id">Leave To:</label>
    <input required type="date" step="any" class="form-control inputModal" name='end_date' placeholder="Until" value="">
    <p class="text-center text-danger fname-error error"></p>
</div>

<div class="mb-0">
    <label for="id">Reason:</label>
    <textarea required class="form-control inputModal" name='leave_reason' placeholder="Reason" value=""></textarea>
    <p class="text-center text-danger fname-error error"></p>
</div>